#!/bin/bash
. ${0%/*}/../etc/tool.env
#######################################################################
# File: 	admtool
# Description:  Sysadmin tools
# Created:	2002-06-23
# $Id$
#######################################################################
PATH=$PATH:/sbin:/usr/sbin
if [ -f ~/.rvm/scripts/rvm ]; then
  unset RUBY RUBYOPT RUBYLIB
  [ -f ~/.rvm/scripts/rvm ] && . ~/.rvm/scripts/rvm
fi

#------------------------------------------------ Begin of script ---
#------------------------------------------------ Begin of script ---
#------------------------------------------------ Begin of script ---

oper=$1; shift
case $oper in
  youtube-dl)
    ytopt=
    while getopts :t:o i; do
      case $i in
      t) ytopt="$ytopt --transpose=$OPTARG" ;;
      o) ytopt="$ytopt --open" ;;
      *) F_usageOper $oper ;;
      esac
    done
    let i=$OPTIND-1; shift $i
    OPTIND=0

    [ $# -gt 0 ] || F_usageOper $oper
    url=$1
    exec hacauto.rb youtube_dl $ytopt $url
    ;;

  transpose)
    [ $# -ge 2 ] || exit 1
    wfile=$1
    offset=$2
    ofile=transpose-$$.mp3
    set -x
    sox "$wfile" $ofile pitch ${offset}00
    set +x
    echo "Final file is $ofile - Open in Sonic Visualizer"
    open -a "Sonic Visualiser" "$ofile"
    ;;

  trim)
    ifile=$1
    shift
    ofile=${ifile%.mp3}
    ofile=${ofile}-new.mp3
    set -x
    sox "$ifile" "$ofile" trim $@
    ;;

  smule-*)
    roper=$(echo ${oper#smule-} | tr '-' '_')
    set -x
    #export RUBYOPT="--jit --jit-verbose=15 --jit-max-cache=1000 --jit-min-calls=50"
    exec smuleauto.rb $roper "$@"
    ;;

  *)
    roper=$(echo $oper | tr '-' '_')
    exec hacauto.rb $roper "$@"
    ;;
esac
exit 0

